<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingEnd="10dp">

    <ImageView
        android:layout_width="@dimen/picture_width"
        android:layout_height="@dimen/picture_height"
        android:id="@+id/cover"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cover"
        android:layout_toEndOf="@+id/cover"
        android:weightSum="2"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/cover">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.38"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:maxLines="3"
            android:text="Title: Jiodid jkdjkd kdk"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="#3A3A3A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:text="dfgfdgdfgdfg"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="#3A3A3A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.08" />

        <RatingBar
            android:id="@+id/ratingBar_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cover"
            android:layout_alignStart="@+id/cover"
            android:numStars="5" />

    </LinearLayout>

</RelativeLayout>